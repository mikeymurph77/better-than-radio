<div class="concert">
  <div class="headliner-photo">
    <% if concert.headliner.profile_picture.present? %>
      <%= link_to image_tag(concert.headliner.profile_picture_url(:snippet).to_s), concert %>
    <% else %>
      <%= no_photo(concert) %>
    <% end %>
  </div>
  <div class="headliner-name">
    <%= link_to concert.headliner.name, concert %>
  </div> 
  <div class="concert-date">
    <%= concert.date.to_formatted_s(:long_ordinal) %>
  </div>
  <div class="more-details">
    <%= link_to "Details", concert %>
  </div>
</div>
