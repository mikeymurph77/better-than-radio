<h2>Edit Concert</h2>

<%= form_for @concert do |form| %>
  <%= render "errors", target: @concert %>
  <div>
    <%= form.label :date, "Event Date: *" %>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.label :event_name, "Event/Tour Name:" %>
    <%= form.text_field :event_name %>
  </div>
  <div>
    <%= form.label :tickets, "Ticket URL: *" %>
    <%= form.url_field :tickets %>
  </div>
  <div>
    <%= form.label :headliner_id, "Headlining Act: *" %>
    <%= form.collection_select :headliner_id, @artists, :id, :name, { include_blank: "Select One" } %>
  </div>
  <div>
    <%= form.fields_for :opening_acts do |select_opening_acts| %>
      <%= select_opening_acts.label :artist_id, "Add an Opening Act:" %>
      <%= select_opening_acts.collection_select :artist_id, @artists, :id, :name, { include_blank: "Select One" } %>
    <% end %>
  </div>
  <div>
    <%= form.label :additional_info, "Additional Information:" %>
    <%= form.text_area :additional_info %>
  </div>
  <p>* - Required fields</p>
  <div>
    <%= form.submit "Update Concert" %>
  </div>
<% end %>
