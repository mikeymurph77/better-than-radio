<%= form_for @member do |form| %>
  <%= render "errors", target: @member %>
  <div>
    <%= form.label :firstname, "First Name:" %>
    <%= form.text_field :firstname %>
  </div>
  <div>
    <%= form.label :location, "Location:" %>
    <%= form.select :location, us_states%>
  </div>
  <div>
    <%= form.submit "Sign Up!" %>
  </div>
  <div>
    <p>Are you an artist or venue? (<%= link_to "Go Back", :create_profile %>)</p>
  </div>
<% end %>
